<%= form_for(@friend) do |f| %>
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% @friend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.text_field :first_name, class:"form-control", placeholder:"First Name"%>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div> 
  <br/>
  <div class="field form-group">
    <%= f.text_field :email , class:"form-control", placeholder:"@Email"%>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.text_field :phone , class:"form-control", placeholder:"Phone Number Ex.989545123"%>
  </div>
  <br/>
  <div class="field form-group">
    <%= f.text_field :twitter , class:"form-control", placeholder:"Tweeter Tag"%>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit class:"btn btn-secondary"%>
  </div>
<% end %>
